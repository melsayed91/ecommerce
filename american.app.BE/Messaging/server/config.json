{
  "restApiRoot": "/uranus",
  "host": "127.0.0.1",
  "port": 3000,
  "remoting": {
    "context": false,
    "rest": {
      "handleErrors": false,
      "normalizeHttpPath": false,
      "xml": false
    },
    "json": {
      "strict": false,
      "limit": "100kb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "100kb"
    },
    "cors": false,
    "sharedMethods": {
      "*": false,
      "addConversation": true,
      "getConversations": true,
      "addMessage": true,
      "getMessages": true,
      "markMessageAsSeen": true
    }
  }
}
